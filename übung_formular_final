Studienfach = widgets.Dropdown(
        options=liste_fach,
        description='Studienfach:',
        disabled=False)
display(Studienfach)

Speichern = widgets.Button(
        description='Speichern',
        disabled=False,
        button_style='success', # 'success', 'info', 'warning', 'danger' or ''
        tooltip='Click me',
        icon='check')
display(Speichern)

Speichern.on_click(speichern)
